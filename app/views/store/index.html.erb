<h1>Flatrion store homepage</h1>

<h2> Catagories </h2>
<div class="row">
<% @categories.each do |category| %>
  <div class="col-md-2">
    <%= link_to category.title, category_path(category) %>
  </div>
<% end %>
</div>

<h2>Products</h2>

<div class="row">
<% @items.each do |item| %>
  <div class="col-md-3", style="margin-top: 15px">
    <%= item.title %> | <%= number_to_currency(item.price / 100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item), class: "btn btn-primary" if user_signed_in? %>
  </div>
<% end %>
</div>